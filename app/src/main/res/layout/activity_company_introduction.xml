<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <jc.house.views.CircleView
        android:id="@+id/company_circle_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></jc.house.views.CircleView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/company_des"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_weight="1"
                android:background="@drawable/tv_company_selector"
                android:gravity="center"
                android:paddingBottom="28dp"
                android:paddingTop="28dp"
                android:text="公司简介"
                android:textSize="17sp"/>
            <TextView
                android:id="@+id/company_video"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/tv_company_selector"
                android:gravity="center"
                android:paddingBottom="28dp"
                android:paddingTop="28dp"
                android:text="公司视频"
                android:textSize="17sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/company_contact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_weight="1"
                android:background="@drawable/tv_company_selector"
                android:gravity="center"
                android:paddingBottom="28dp"
                android:paddingTop="28dp"
                android:text="联系我们"
                android:textSize="17sp"/>
            <TextView
                android:id="@+id/company_business"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/tv_company_selector"
                android:gravity="center"
                android:paddingBottom="28dp"
                android:paddingTop="28dp"
                android:text="公司业务"
                android:textSize="17sp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
