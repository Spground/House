<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jc.house.activities.FeedbackActivity"
    android:orientation="vertical"
    >
    <!--<jc.house.views.TitleBar-->
        <!--android:id="@+id/titlebar"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content" >-->
    <!--</jc.house.views.TitleBar>-->
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:padding="10dp"
       android:background="@color/light_gray"
       >
       <EditText
           android:id="@+id/id_user_feedback_edit_text"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="top"
           android:layout_marginTop="10dip"
           android:textColor="#000000"
           android:cursorVisible="true"
           android:background="@drawable/basic_edit_textiview_bg"
           android:textCursorDrawable="@null"
           android:gravity="left|top"
           android:hint="请将您的反馈在这里填写，因为您的反馈，我们将做得更好，限140字内！"
           android:inputType="textMultiLine"
           android:minLines="6"
           android:padding="10dip"
           android:textSize="15sp" />
       <Button
           android:id="@+id/id_user_feedback_submit_button"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:background="@drawable/basic_large_btn_selector"
           android:gravity="center"
           android:padding="10dip"
           android:textColor="@color/white"
           android:text="提交"
           android:layout_marginTop="20dp"
           android:textSize="20sp"
           />
   </LinearLayout>
</LinearLayout>
