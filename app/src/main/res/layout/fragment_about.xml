<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/jc_logo_flash"
        android:scaleType="fitXY"
        />
    <TextView
        android:id="@+id/id_company_introduction"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="公司简介"
        android:textSize="18sp"
        android:paddingLeft="20dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/ic_action_users"
        android:gravity="left|center"
        android:background="@drawable/jc_aboutfragment_textview_selector"
        android:clickable="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="25dp"
        >
        <TextView
            android:id="@+id/id_user_feedback"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="20dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_action_monolog"
            android:text="意见反馈"
            android:textSize="18sp"
            android:gravity="left|center"
            android:background="@drawable/jc_aboutfragment_textview_selector"
            android:clickable="true"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg_gray"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            />

        <TextView
            android:id="@+id/id_check_update"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="20dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_action_reload"
            android:text="版本更新"
            android:textSize="18sp"
            android:gravity="left|center"
            android:background="@drawable/jc_aboutfragment_textview_selector"
            android:clickable="true"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg_gray"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            />


        <TextView
            android:id="@+id/id_about_us"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="20dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_action_info"
            android:text="关于我们"
            android:textSize="18sp"
            android:gravity="left|center"
            android:background="@drawable/jc_aboutfragment_textview_selector"
            android:clickable="true"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg_gray"

            />
    </LinearLayout>
</LinearLayout>